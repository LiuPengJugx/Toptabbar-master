<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.carson_ho.toptabbar.ui.activity.CountMangerActivity">

    <RelativeLayout
        android:id="@+id/rl_HeadPortrait"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        android:background="@color/colorWhite"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="头像"
        android:textSize="28dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

    <ImageView
        android:id="@+id/userHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/wode" />
</RelativeLayout>

    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="昵称"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="随便起的"
            android:textColor="@color/colorGold"
            android:textSize="18dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="学号"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/userNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="2220161554"
            android:textColor="@color/colorGold"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/colorWhite"
        android:id="@+id/rl_PhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="手机号"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="123456789"
            android:textColor="@color/colorGold"
            android:textSize="18dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="个性签名"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/userSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="lalalalalalala"
            android:textColor="@color/colorGold"
            android:textSize="18dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_outOfLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出当前登录"
        android:background="#CFB53B"
        />
</LinearLayout>
