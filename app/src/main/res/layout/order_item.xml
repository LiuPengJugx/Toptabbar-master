<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
    >

        <ImageView
            android:id="@+id/order_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="29dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_room"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/order_room"
            android:text="故宫博物院上午场"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_room"
            android:layout_alignStart="@+id/room_name"
            android:text="时间：" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_room"
            android:layout_alignStart="@+id/order_cost"
            android:text="2小时" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView4"
            android:layout_marginBottom="13dp"
            android:text="总价：" />

        <TextView
            android:id="@+id/order_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/textView6"
            android:text="20.00" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/order_cost"
            android:layout_alignBottom="@+id/order_cost"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/order_cost"
            android:text="元" />

        <TextView
            android:id="@+id/status_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/room_name"
            android:layout_marginEnd="14dp"
            android:text="已使用"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignEnd="@+id/status_use"
            android:background="@color/colorGrey"
            android:singleLine="false"
            android:text="评价"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorWhite" />


</LinearLayout>